<Page
    x:Class="WireFrame.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WireFrame"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    
    
    <Grid>

        <local:Grid
            x:Name="WFGrid"
            Width="300" 
            Height="300"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            PixelsPerUnit="10" 
            UnitsPerScale = "5"
            BackgroundColor="Black" 
            DividerColor="#1F1F1F"
            SubDividerColor="#0F0F0F"/>

        <local:Ruler 
            x:Name="WFHorizontalRuler"
            HorizontalRuler="Visible"
            VerticalRuler="Collapsed"
            HorizontalAlignment = "Stretch" 
            VerticalAlignment = "Top"
            ScaleMarkPosition = "50"
            RulerLength = "1000"
            RulerWidth = "20"            
            PixelsPerUnit = "10"
            UnitsPerScale = "5"
            SmallDividerLength = "7"
            LargeDividerLength = "20"
            BackgroundColor = "Black"
            DividerColor = "White"
            TextColor = "White"/>

        <local:Ruler 
            x:Name="WFVerticalRuler"
            HorizontalRuler="Collapsed"
            VerticalRuler="Visible"
            HorizontalAlignment = "Left" 
            VerticalAlignment = "Stretch"
            ScaleMarkPosition = "50"
            RulerLength = "1000"
            RulerWidth = "20"            
            PixelsPerUnit = "10"
            UnitsPerScale = "5"
            SmallDividerLength = "7"
            LargeDividerLength = "20"
            BackgroundColor = "Black"
            DividerColor = "White"
            TextColor = "White"/>

        

    </Grid>
</Page>

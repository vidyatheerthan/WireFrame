<UserControl
    x:Class="WireFrame.Controls.WFCanvas"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WireFrame.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:shapes="using:WireFrame.Shapes"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid x:Name="_grid" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

        <ScrollViewer x:Name="_scrollViewer" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalScrollBarVisibility="Auto" ZoomMode="Enabled" MaxZoomFactor="10.0" Background="LightGray">

            <Canvas x:Name="_canvas" Width="{x:Bind Path=CanvasWidth, Mode=OneWay}" Height="{x:Bind Path=CanvasHeight, Mode=OneWay}" HorizontalAlignment="Center" VerticalAlignment="Center" Background="WhiteSmoke">

                <Canvas>

                    <Rectangle x:Name="_frame" Width="{x:Bind Path=FrameWidth, Mode=OneWay}" Height="{x:Bind Path=FrameHeight, Mode=OneWay}" Fill="White" HorizontalAlignment="Center" VerticalAlignment="Center" StrokeThickness="2" />

                </Canvas>

                <Canvas x:Name="_container">

                    <shapes:CompoundShape Stroke="DarkGreen" Fill="GreenYellow" Width="200" Height="100" Canvas.Left="1000" Canvas.Top="300"/>
                    <shapes:CompoundShape Stroke="DarkOrange" Fill="Orange" Width="30" Height="50" Canvas.Left="1500" Canvas.Top="200"/>
                    <shapes:EllipseShape Stroke="DeepPink" Fill="Pink" Width="120" Height="60" Canvas.Left="1200" Canvas.Top="800"/>
                    <shapes:CompoundShape Stroke="Coral" Fill="DarkKhaki" Width="30" Height="30" Canvas.Left="1800" Canvas.Top="500"/>
                    <shapes:RectangleShape Stroke="Cyan" Fill="DarkCyan" Width="60" Height="100" Canvas.Left="700" Canvas.Top="700"/>

                </Canvas>

            </Canvas>

        </ScrollViewer>

        <Canvas x:Name="_HUD" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            
            <local:WFTitleBox x:Name="_titleBox" Visibility="Collapsed" />

            <local:WFActionTip x:Name="_actionTip" Visibility="Collapsed" />

            <local:WFSizeControl x:Name="_sizeControl" Visibility="Collapsed" />

            <local:WFRotationControl x:Name="_rotationControl" />

        </Canvas>

    </Grid>

</UserControl>
